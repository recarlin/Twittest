<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imagePLZ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:text="Your Forecast"
        style="@style/Title"/>
    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        <Button 
            android:id="@+id/back"
            android:layout_width="0dp"
           	android:layout_height="wrap_content"
           	android:layout_weight=".3"
           	android:text="Back"/>
        
        <Button 
            android:id="@+id/saveZip"
            android:layout_width="0dp"
           	android:layout_height="wrap_content"
           	android:layout_weight=".3"
           	android:text="Save Home Zip"/>
        
        <Button 
            android:id="@+id/JSONSource"
            android:layout_width="0dp"
           	android:layout_height="wrap_content"
           	android:layout_weight=".3"
           	android:text="View JSON Source"/>
    </LinearLayout>
    <ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    <LinearLayout
		        android:id="@+id/_0"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal">
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/_1"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="horizontal">
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/_2"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="horizontal">
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/_3"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="horizontal">
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/_4"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="horizontal">
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/_5"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="horizontal">
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/_6"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="horizontal">
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/_7"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="horizontal">
		    </LinearLayout>
	    </LinearLayout>
    </ScrollView>
    
    
</LinearLayout>